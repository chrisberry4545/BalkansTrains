<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->TrainAppTheme
    </style>
    
    <style name="TrainAppTheme" parent="AppTheme">
	    <item name="android:actionBarStyle">@style/WindowTitleBackground</item>
	</style>
	
	<style name="WindowTitleBackground" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
		<item name="android:titleTextStyle">@style/ActionBarText</item>
	   	<item name="android:background">@drawable/action_bar_background</item>  
	</style>
	
	<style name="ActionBarText">
	    <item name="android:textColor">@color/titlebarTextColor</item>
	    <item name="android:textSize">@dimen/titleTextSize</item>
	</style>

</resources>